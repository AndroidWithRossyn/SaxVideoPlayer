<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="110dp">
    <RelativeLayout
        android:id="@+id/next_video"
        android:layout_toLeftOf="@+id/navi_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_centerVertical="true"
            android:id="@+id/thumb_id"
            android:layout_width="122dp"
            android:layout_height="110dp">

            <ImageView
                android:layout_marginTop="7dp"
                android:scaleType="centerCrop"
                android:id="@+id/thumb"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="100dp"
                android:layout_height="90dp"/>
            <TextView
                android:layout_marginTop="8dp"
                android:layout_marginLeft="7dp"
                android:id="@+id/tag_lay"
                android:textColor="#fff"
                android:textSize="8dp"
                android:gravity="center"
                android:text="New"
                android:background="@drawable/new_vdeo_shape"
                android:layout_width="30dp"
                android:layout_height="15dp"/>
            <RelativeLayout
                android:layout_marginRight="12dp"
               android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#80000000"
                android:layout_width="60dp"
                android:layout_height="15dp">
                <ImageView
                    android:padding="3dp"
                    android:id="@+id/img"
                    android:src="@drawable/ic_play"
                    android:layout_centerVertical="true"
                    android:layout_width="15dp"
                    android:layout_height="15dp"/>

                <TextView
                    android:layout_toRightOf="@+id/img"
                    android:id="@+id/time_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="10:00"
                    android:textColor="#fff"
                    android:textSize="8dp">

                </TextView>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/thumb_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:fontFamily="@font/mulishmedium"
                android:id="@+id/video_name"
                android:paddingLeft="10dp"
                android:textColor="#000"
                android:textSize="13dp"
                android:text="Video Name"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:fontFamily="@font/mulishsemibold"
                android:id="@+id/video_date"
                android:paddingLeft="10dp"
                android:textSize="11dp"
                android:text="Modified :18-06-2021"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:layout_marginTop="12dp"
                android:id="@+id/video_size"
                android:textColor="#000"
                android:paddingLeft="10dp"
                android:textSize="10dp"
                android:text="Size:9.55 MB"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/navi_btn"
        android:layout_alignParentRight="true"
        android:layout_width="60dp"
        android:layout_height="match_parent">
        <ImageView
            android:padding="5dp"
            android:id="@+id/navi_img"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_more"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <CheckBox
            android:visibility="gone"
            android:id="@+id/check_btn"
            android:layout_centerInParent="true"
            android:layout_width="30dp"
            android:layout_height="40dp"/>
    </RelativeLayout>

</RelativeLayout>