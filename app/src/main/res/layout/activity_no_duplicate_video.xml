<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hammerapp.sx.xxplayer.activity.NoDuplicateVideoActivity">
    <RelativeLayout
        android:id="@+id/toolbar"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <TextView
            android:fontFamily="@font/mulishmedium"
            android:gravity="center"
            android:textSize="18dp"
            android:layout_centerInParent="true"
            android:textColor="#fff"
            android:text="Sax Video player - All Formet Hd Player "
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/duplicate_temp"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <TextView
            android:fontFamily="@font/mulishmedium"
            android:textColor="#F16767"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:text="NO DUPLICATE FILES FOUND"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@+id/duplicate_temp"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:fontFamily="@font/mulishmedium"
                android:textColor="#F16767"
                android:gravity="center"
                android:text="Loding ads...."
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>