<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_splash"
    tools:context="com.hammerapp.sx.xxplayer.SplashScreenActivity">
    <View
        android:id="@+id/center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ImageView
        android:id="@+id/img_btn"
        android:src="@drawable/splash_logo"
        android:layout_below="@+id/center"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_width="100dp"
        android:layout_height="100dp">
    </ImageView>
    <TextView
        android:scaleY="1.1"
        android:scaleX="1.1"
        android:id="@+id/title_btn"
        android:fontFamily="@font/mulishbold"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="Sax Video Player"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_below="@+id/img_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:scaleY="1.2"
        android:scaleX="1.1"
        android:fontFamily="@font/mulishmedium"
        android:textSize="15dp"
        android:textColor="#000"
        android:text="All Type Formats Supported"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_below="@+id/title_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>